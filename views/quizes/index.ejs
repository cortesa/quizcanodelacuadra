<form action='/quizes' method='get'>
<!--<label>BÃºsqueda de preguntas</label>-->
  <input type='text'name='search'placeholder='Filtra la pregunta'>
  <input type='submit' value='buscar'>
</form>
<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>        
     <tr>
       <td>
         <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a> 
       </td>
       <td>
         <a href="quizes/<%= quizes[i].id %>/edit"><button>Modificar</button></a>
       </td>
       <td>
         <form method='post'action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type='submit' onClick='return confirm("Borrar:<%= quizes[i].pregunta %>");'>Borrar</button>
         </form>
       </td>
  </tr> 
  <% } %>
  </table>
<p><a href="/quizes/new"><button type="button">Crear pregunta</button></a></p>